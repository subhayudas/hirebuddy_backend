{
  "name": "hirebuddy-backend",
  "version": "1.0.0",
  "description": "AWS Lambda backend for HireBuddy application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "deploy": "./deploy.sh",
    "deploy:dev": "./deploy.sh dev",
    "deploy:prod": "./deploy.sh prod",
    "deploy:raw": "dotenv -e .env -- serverless deploy",
    "deploy:sls": "dotenv -e .env -- serverless deploy --stage dev",
    "deploy:function": "dotenv -e .env -- serverless deploy function",
    "local": "dotenv -e .env -- serverless offline",
    "remove": "dotenv -e .env -- serverless remove",
    "logs": "serverless logs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:premium": "jest src/tests/premium.test.ts",
    "test:integration": "jest src/tests/integration.test.ts",
    "test:email": "jest src/tests/email.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.6.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "dotenv-cli": "^9.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.3",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "aws-lambda",
    "serverless",
    "hirebuddy",
    "api"
  ],
  "author": "HireBuddy Team",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.ts"]
  }
}
